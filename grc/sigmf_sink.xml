	<param>
		<name>Hardware</name>
		<key>hw</key>
		<type>string</type>
	</param>

	<param>
		<name>Sha512</name>
		<key>sha512</key>
		<type>string</type>
		<hide>all</hide>
	</param>

	<param>
		<name>Sample Rate</name>
		<key>sample_rate</key>
		<value>0</value>
		<type>float</type>
	</param>

	<param>
		<name>Offset</name>
		<key>offset</key>
		<value>0</value>
		<type>int</type>
	</param>

	<param>
		<name>Metadata File</name>
		<key>metadata_filename</key>
		<type>file_save</type>
	</param>

	<param>
		<name>Dataset File</name>
		<key>dataset_filename</key>
		<type>file_save</type>
	</param>

	<sink>
		<name>in</name>
		<type>$type</type>
